<h1>Product List</h1>
<div class="pull-right">
  <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-primary", :style => "margin: 0px 0px 10px;")%>
</div>

<table class="table table-board">
  <tr>
    <th>#</th>
    <th>Image</th>
    <th>Title</th>
    <th>Price</th>
    <th>Action</th>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><%= product.id %></td>
    <td>
      <% if product.image.present? %>
        <%= image_tag(product.image.thumb.url)%>
      <% else %>
        <%= image_tag("https://ws1.sinaimg.cn/large/006tNc79gy1fha84kunf7j305k05kaa2.jpg", class: "thumbnail")%>
      <% end %>

    </td>
    <td><%= product.title %></td>
    <td>Â¥<%= product.price %></td>
    <td>
      <%= link_to("Edit", edit_admin_product_path(product), :class => "btn btn-default") %> |
      <%= link_to("Delete", admin_product_path(product), :class => "btn btn-default", method: :delete) %>
    </td>
  </tr>
  <% end %>
</table>
